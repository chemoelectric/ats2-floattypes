prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@
host=@host@
package=@PACKAGE@
version=@VERSION@

CPPFLAGS="@CPPFLAGS@ -I${includedir}/${package} -I${includedir}/${package}/${host}"
PATSOPTFLAGS="-IATS ${includedir}/${package} -IATS ${includedir}/${package}/${host}"
PATSCCFLAGS="-IIATS ${includedir}/${package} -IIATS ${includedir}/${package}/${host}"

Name: ${package}
Description: More floating-point support for ATS2/Postiats
Version: ${version}
Libs: -L${libdir} -lats2-floattypes -lm
Cflags: ${CPPFLAGS}
