(* Column-major array access, for m-by-n arrays.
   Reverse the order of indices to get row-major access. *)

fn {t : t@ype}
arr2get {m, n : int}
        {na   : int | m * n <= na}
        {i, j : nat | i < m; j < n}
        (a    : &array(t, na),
         m    : size_t m,
         i    : size_t i,
         j    : size_t j) :<!ref> t

fn {t : t@ype}
arr2put {m, n : int}
        {na   : int | m * n <= na}
        {i, j : nat | i < m; j < n}
        (a    : &array(t, na),
         m    : size_t m,
         i    : size_t i,
         j    : size_t j,
         x    : t) :<!refwrt> void
